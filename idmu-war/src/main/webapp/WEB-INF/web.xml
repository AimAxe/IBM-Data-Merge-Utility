<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	metadata-complete="false"
		 version="3.0">
	<display-name>idmu-war</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Initialize</servlet-name>
		<servlet-class>com.ibm.util.merge.web.Initialize</servlet-class>
		<init-param>
			<param-name>log4j-init-file</param-name>
			<param-value>/WEB-INF/properties/log4j.properties</param-value>
		</init-param>
		<init-param>
			<param-name>merge-output-root</param-name>
			<param-value>/tmp/merge/</param-value>
		</init-param>
		<init-param>
			<param-name>merge-templates-folder</param-name>
			<param-value>/WEB-INF/templates/</param-value>
		</init-param>
		<init-param>
			<param-name>templates-persist</param-name>
			<param-value>-NOT-Database</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Initialize</servlet-name>
		<url-pattern>/Service/</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Merge</servlet-name>
		<servlet-class>com.ibm.util.merge.web.Merge</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Merge</servlet-name>
		<url-pattern>/Merge/</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Persist</servlet-name>
		<servlet-class>com.ibm.util.merge.web.Persist</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Persist</servlet-name>
		<url-pattern>/Template/</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Query</servlet-name>
		<servlet-class>com.ibm.util.merge.web.Query</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Query</servlet-name>
		<url-pattern>/Query/</url-pattern>
	</servlet-mapping>

</web-app>
